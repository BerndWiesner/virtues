<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %}
            <link href="{{ asset('bootstrap/css/candy-box.css') }}" rel="stylesheet" />
        {% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    </head>
    <body>
        <div class="container">
        {% block navi %}
            <div class="row">
                <div class="col-lg-12">
                    <div class="navbar navbar-default">
                        <div class="nav navbar-header">
                            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-responsive-collapse">
                                <span class="icon-bar"></span>
                                <span class="icon-bar"></span>
                                <span class="icon-bar"></span>
                            </button>
                            <a class="navbar-brand" href="{{ path('virtue_today') }}">Werte</a>
                        </div>
                        <div class="navbar-collapse collapse navbar-responsive-collapse">
                            <ul class="navbar-nav nav">
                                <li class="{% if app.request.attributes.get('_route') == 'virtue_today' %}active{% endif %}">
                                    <a href="{{ path('virtue_today') }}">Wert des Tages</a>
                                </li>
                                <li class="{% if app.request.attributes.get('_route') == 'virtue_random' %}active{% endif %}">
                                    <a href="{{ path('virtue_random') }}">Zuf√§lliger Wert</a>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        {% endblock %}
        {% block body %}{% endblock %}

        </div>
        {% block javascripts %}
            <script src="{{ asset('js/jquery-1.10.2.min.js') }}"></script>
            <script src="{{ asset('bootstrap/js/bootstrap.min.js') }}"></script>
        {% endblock %}
    </body>
</html>
